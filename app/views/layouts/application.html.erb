<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>World Startup Wiki Moderator Tool</title>
  <%= twitter_bootstrap_stylesheet_link_tag :netdna, force: true %>
  <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" %>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  
  <%= csrf_meta_tags %>
</head>

<body id="<%= controller_name %>">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <%= link_to root_url, class: "navbar-brand" do %>World Startup Wiki <small>Submission Tool</small><% end %>
      <ul class="nav navbar-nav navbar-right">
        <%- if current_user.present? %>
        <li>
          <a>Hi <%= current_user.identities.first.first_name %>!</a>
        </li>
        <li>
          <%= link_to destroy_user_session_url, method: :delete, data: {toggle: "tooltip", placement: "bottom", container: "body"}, title:"Sign out" do %>
            <i class="fa fa-sign-out"></i>
          <%- end %>
        </li>
        <%- end %>
      </ul>
    </div>
  </nav>
<!-- view -->
<div class="container">
  <div id="site_alert">
  <%- if notice.present? %>
    <div class="notice alert alert-warning"><%= notice %></div>
  <%- end %>
  <%- if alert.present? %>
    <div class="alert alert-info"><%= alert %></div>
  <%- end %>
  </div>
  
  <%= yield %>
  
  
</div>

<!-- Modal -->
<div class="modal fade" id="popup" tabindex="-1" role="dialog" aria-labelledby="popup_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="popup_label">World Startup Wiki</h4>
      </div>
      <div class="modal-body">
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Okay, sweet!</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="mdl_reject">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Reject Submission</h4>
      </div>
      <div class="modal-body">
        <input type="hidden" id="data_id" value="">
        <div class="form-group">
          <label for="body_why">Why?</label>
          <textarea class="form-control" rows="5" id="body_why"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button id="btn_submit_reason" type="button" class="btn btn-primary" data-dismiss="modal"><i class="glyphicon glyphicon-send"></i> Send</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <div class="container">
    <p class="navbar-text navbar-right nerubia">Code provided for by <a class="nerubia" href="//www.nerubia.com">Nerubia</a></p>
  </div>
</nav>
<!-- end of view -->

  <%= include_jquery env: :production %>
  <%= twitter_bootstrap_javascript_include_tag :netdna, force: true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
</body>

</html>